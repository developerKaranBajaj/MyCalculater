<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/btnEqual"
        android:layout_width="204dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/equal"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="210dp" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="475dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/seven" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/eight" />

            <ImageButton
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/nine" />

            <ImageView
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/four" />

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/five" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/six" />

            <ImageView
                android:id="@+id/btnSubstraction"
                android:layout_width="101dp"
                android:layout_height="120dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/subtract" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/three" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/two" />

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/one" />

            <ImageView
                android:id="@+id/btnMultiply"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/multiply" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="2"
                android:background="#171A1A"
                android:gravity="center"
                android:text="C    "
                android:textSize="45sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#171A1A"
                app:srcCompat="@drawable/zero" />

            <ImageView
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/divide" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="32dp"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txtCalculation"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="bottom"
            android:gravity="bottom|right"
            android:text="0"
            android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtCalculation"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>